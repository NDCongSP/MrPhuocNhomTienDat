<Window x:Class="DemoPhucThinh.frmLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoPhucThinh"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="800" WindowStartupLocation="CenterScreen" WindowState="Normal" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <TextBlock Text="ĐĂNG NHẬP" FontSize="50" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Margin="10"/>
        <TextBox x:Name="txtUserName" Text="" FontSize="50"
                 Margin="5" TabIndex="1"/>
        <PasswordBox x:Name="txtPassword" FontSize="50"
                     Margin="5" TabIndex="2"/>
        <Button x:Name="btnLogin" Content="LOGIN" FontSize="50" Height="100" Click="btnLogin_Click"
                Margin="5" TabIndex="3"/>
    </StackPanel>
</Window>
