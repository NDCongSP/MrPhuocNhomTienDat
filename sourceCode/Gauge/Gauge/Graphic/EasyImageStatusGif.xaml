<UserControl x:Class="Gauge.EasyImageStatusGif"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gauge"
             x:Name="host"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Viewbox>
        <Grid>
            <Image x:Name="imgOn" Visibility="Visible" gif:ImageBehavior.AnimateInDesignMode="True" gif:ImageBehavior.AnimatedSource="{Binding ElementName=host, Path=GifSource}"></Image>
        </Grid>
    </Viewbox>
</UserControl>
